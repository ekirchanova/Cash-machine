<Page x:Class="CashMachineApp.WithdrawMoneyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:behaviors="clr-namespace:CashMachineApp.Behaviors"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="WithdrawMoneyPage">

    <Grid x:Name="WithDrawMoneyPage1">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="#FF589A4B" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <TextBlock Margin="0,32,0,0" TextWrapping="Wrap" Text="Withdraw money" Height="74" FontSize="60" Foreground="White" VerticalAlignment="Top" HorizontalAlignment="Center"/>
        <StackPanel Orientation="Vertical" VerticalAlignment="Top" Margin="15,180,15,0">
            <TextBlock  TextWrapping="Wrap" Text="Enter the required amount of money " Height ="60" Width="500" FontSize="40" Foreground="White" VerticalAlignment="Top" HorizontalAlignment="Center"/>
            <TextBox Text="{Binding SumMoney, UpdateSourceTrigger=PropertyChanged}" FontSize="30" MaxLength="10" Width="500" Height="60" Foreground="White" VerticalAlignment="Top" HorizontalAlignment="Center" Background="#FF132110" behaviors:NumberValidationBehavior.IsEnabled="True">
                <TextBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding OkCommand}"/>
                </TextBox.InputBindings>
            </TextBox>
            <CheckBox IsChecked="{Binding IsSmallMoney}" Margin="40,0,0,0" Content="Give small bills" HorizontalAlignment="Center" Height="60" FontSize="40" Foreground="White" Width="500" VerticalAlignment="Top"/>
        </StackPanel>
        <Button Content="Ok" HorizontalAlignment="Left" Margin="420,510,0,0" Foreground="White" FontSize="30" VerticalAlignment="Top" Background="#FF61B054" Height="40" Width="132" Command="{Binding OkCommand}"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="580,510,0,0" VerticalAlignment="Top" Foreground="White" FontSize="30" Background="#FF61B054" Height="40" Width="132" Command="{Binding CancelCommand}"/>
       

    </Grid>
</Page>
