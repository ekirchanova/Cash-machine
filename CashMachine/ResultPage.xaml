<Page x:Class="CashMachineApp.ResultPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ResultPage">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="#FF589A4B" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TextBlock Text="{Binding TitleText}" Margin="0,32,0,0" TextWrapping="Wrap" Height="74" FontSize="60" Foreground="White" VerticalAlignment="Top" HorizontalAlignment="Center"/>
        <StackPanel Margin="0,150,0,0" >
            <TextBlock Text="{Binding RemainText}" TextWrapping="Wrap" Height="80" FontSize="60" Foreground="White" VerticalAlignment="Top" HorizontalAlignment="Center"/>
            <TextBlock Text="{Binding Remain}" TextWrapping="Wrap" Height="80" FontSize="60" Foreground="White" VerticalAlignment="Top" HorizontalAlignment="Center"/>
        </StackPanel>
        <Button Content="Ok" HorizontalAlignment="Left" Margin="580,510,0,0" Foreground="#FF656060" FontSize="30" VerticalAlignment="Top" Background="#FF61B054" Height="40" Width="132" Command="{Binding OkCommand}"/>


    </Grid>
</Page>
